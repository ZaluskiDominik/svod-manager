<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}sVOD manager{% endblock %}</title>

        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.js"></script>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/global.css') }}">
            <link rel="stylesheet" href="{{ asset('css/components.css') }}">
            <link rel="stylesheet" href="{{ asset('lib/buttons/css/buttons.css') }}">
            <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        {% endblock %}
    </head>
    <body ng-app="app">
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            <script src="{{ asset('js/module/app.js') }}"></script>
            <script src="{{ asset('js/util/form-fields-to-object-converter.js') }}"></script>
            <script src="{{ asset('js/controller/validate-form-controller.js') }}"></script>
        {% endblock %}
    </body>
</html>
