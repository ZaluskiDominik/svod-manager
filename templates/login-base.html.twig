{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login-base.css') }}"></link>
    <link rel="stylesheet" href="{{ asset('css/components.css') }}"></link>
{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="sideImg"></div>
        <div class="login-panel-container">
            <div class="login-panel">
                <div class="thumbur">
                    <div class="icon-lock"></div>
                </div>
                <h4>{% block loginTitle %}{% endblock %}</h4>
                <form id="login" name="login" ng-model="login" ng-submit="submitLogin()" novalidate
                      ng-controller="{% block loginController%}{% endblock %}">
                    <div class="form-group">
                        <input class="form-control" type="email" ng-model="email" name="email"
                               placeholder="Email@domain.com" required maxlength="100"/>
                        <div ng-if="login.email.$touched && login.email.$invalid" class="input-err-msg">
                            Please enter valid email address
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="form-control" ng-model="password" name="password" type="password"
                               placeholder="Enter password" required maxlength="20" minlength="8"/>
                        <div ng-if="login.password.$touched && login.password.$invalid" class="input-err-msg">
                            Password length must be between 8 and 20 characters
                        </div>
                    </div>
                    <div class="api-error" ng-if="apiError">{% verbatim %}{{ apiError }}{% endverbatim %}</div>

                    <button tabindex="-1" type="submit" class="floating-btn"><i class="icon-arrow"></i></button>
                </form>
                {% block signupLink %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/util/login.js') }}"></script>
{% endblock %}
